<?php if(count($requests) === 0): ?>
 <div class="alert alert-info">У вас пока нет назначенных заявок.</div>
<?php else: ?>
 <div class="table-responsive">
 <table class="table table-hover table-bordered">
 <thead class="table-light">
 <tr>
 <th>#</th>
 <th>Клиент</th>
 <th>Телефон</th>
 <th>Адрес</th>
 <th>Проблема</th>
