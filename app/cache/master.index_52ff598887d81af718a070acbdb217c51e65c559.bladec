 <th>Действия</th>
 </tr>
 </thead>
 <tbody>
 <?php $__currentLoopData = $requests; $this->addLoop($__currentLoopData);$this->getFirstLoop();
 foreach($__currentLoopData as $request): $loop = $this->incrementLoopIndices();  ?>
 <?php 
 $status = \App\Domain\Enum\RequestStatus::from($request['status']);
 ?>
 <tr>
 <td><?php echo \htmlentities($request['id']??'', ENT_QUOTES, 'UTF-8', false); ?></td>
 <td><?php echo \htmlentities($request['client_name']??'', ENT_QUOTES, 'UTF-8', false); ?></td>
