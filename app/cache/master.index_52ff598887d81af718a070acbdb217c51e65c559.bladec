 <button type="submit" class="btn btn-success btn-sm"
 onclick="return confirm('Завершить заявку?')">Завершить</button>
 </form>
 <?php elseif($status === \App\Domain\Enum\RequestStatus::Done): ?>
 <span class="text-success">Выполнена</span>
