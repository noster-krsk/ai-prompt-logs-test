{
    "name": "repair-service/app",
    "description": "Repair Service Requests - Web application for managing repair service requests",
    "type": "project",
    "require": {
        "php": "^8.3",
        "nikic/fast-route": "^1.3",
        "eftec/bladeone": "^4.13",
        "vlucas/phpdotenv": "^5.6"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/",
            "App\\Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
